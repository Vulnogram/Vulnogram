{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Common Vulnerability Scoring System (CVSS) 3.1",
    "options": {
        "class": "vgi-dial tgap"
    },
    "description": "Capture the principal characteristics of a vulnerability and produce a numerical score (zero to ten) reflecting its severity.",
    "id": "cvss",
    "type": "object",
    "format": "grid",
    "properties": {
        "version": {
            "type": "string",
            "enum": ["3.1"],
            "options": {
                "hidden": "true"
            }
        },
        "attackVector": {
            "title": "Attack Vector",
            "type": "string",
            "format": "radio",
            "enum": ["PHYSICAL", "LOCAL", "ADJACENT_NETWORK", "NETWORK"],
            "options": {
                "grid_columns": 12,
                "enum_titles": ["Physical", "Local", "Adjacent", "Network"],
                "icons": {
                    "PHYSICAL":"cvss-physical",
                    "LOCAL":"cvss-user",
                    "ADJACENT_NETWORK":"cvss-adj",
                    "NETWORK": "cvss-net"
                }
            }
        },
        "attackComplexity": {
            "title": "Attack Complexity",
            "type": "string",
            "format": "radio",
            "enum": ["HIGH", "LOW"],
            "options": {
                "grid_columns": 12,
                "enum_titles": ["High", "Low"],
                "icons": {
                    "HIGH":"rocket",
                    "LOW":"paper-plane"
                }                             
            }
        },
        "privilegesRequired": {
            "title": "Privileges Required",
            "type": "string",
            "format": "radio",
            "enum": ["HIGH", "LOW", "NONE"],
            "options": {
                "grid_columns": 12,
                "enum_titles": ["High", "Low", "None"],
                "icons": {
                    "HIGH":"king",
                    "LOW":"pawn",
                    "NONE": "thief"
                }
            }
        },
        "userInteraction": {
            "title": "User Interaction",
            "type": "string",
            "format": "radio",
            "enum": ["REQUIRED", "NONE"],
            "options": {
                "grid_columns": 12,
                "enum_titles": ["Required", "None"],
                "icons": {
                    "REQUIRED":"cvss-ui",
                    "NONE":"cvss-direct"
                }
            }
        },
        "scope": {
            "title": "Scope",
            "type": "string",
            "format": "radio",
            "enum": ["UNCHANGED", "CHANGED"],
            "options": {
                "grid_columns": 12,
                "enum_titles": ["Unchanged", "Changed"],
                "icons": {
                    "UNCHANGED":"cvss-direct",
                    "CHANGED":"cvss-scope-change"
                }                         
            }
        },
        "confidentialityImpact": {
            "title": "Confidentiality",
            "type": "string",
            "format": "radio",
            "enum": ["NONE", "LOW", "HIGH"],
            "options": {
                "grid_columns": 12,
                "enum_titles": ["None", "Low", "High"],
                "icons": {
                    "HIGH":"eye",
                    "LOW":"eye-half",
                    "NONE": "eye-close"
                }
            }
        },
        "integrityImpact": {
            "title": "Integrity",
            "type": "string",
            "format": "radio",
            "enum": ["NONE", "LOW", "HIGH"],
            "options": {
                "grid_columns": 12,
                "enum_titles": ["None", "Low", "High"],
                "icons": {
                    "HIGH":"box-high",
                    "LOW":"box-low",
                    "NONE": "box"
                }
            }
        },
        "availabilityImpact": {
            "title": "Availability",
            "type": "string",
            "format": "radio",
            "enum": ["NONE", "LOW", "HIGH"],
            "options": {
                "grid_columns": 12,
                "enum_titles": ["None", "Low", "High"],
                "icons": {
                    "HIGH":"signal-1",
                    "LOW":"signal-2",
                    "NONE": "signal"
                }
            }
        },
        "baseScore": {
            "title": "Base Score",
            "type": "number",
            "minimum": 0,
            "maximum": 10,
            "template": "cvssjs.calculate(context)",
            "watch": {
              "attackVector": "cvss.attackVector",
              "attackComplexity": "cvss.attackComplexity",
              "privilegesRequired": "cvss.privilegesRequired",
              "userInteraction": "cvss.userInteraction",
              "scope": "cvss.scope",
              "confidentialityImpact": "cvss.confidentialityImpact",
              "integrityImpact": "cvss.integrityImpact",
              "availabilityImpact": "cvss.availabilityImpact"
            },
            "options": {
              "grid_columns": 2,
              "class": "vgi-dial",
              "formClass": "lni"
            }
          },
          "baseSeverity": {
            "title": "Base Severity",
            "type": "string",
            "format": "string",
            "template": "cvssjs.severity(context.sc).name",
            "watch": {
              "sc": "cvss.baseScore"
            },
            "options": {
              "grid_columns": 3,
              "class": "vgi-dial",
              "formClass": "lni"
            }
          },
          "vectorString": {
            "title": "Vector",
            "type": "string",
            "options": {
              "grid_columns": 7,
              "class": "vgi-title",
              "formClass": "lni"
            },
            "pattern": "^CVSS:3.[0-1]/((AV:[NALP]|AC:[LH]|PR:[UNLH]|UI:[NR]|S:[UC]|[CIA]:[NLH]|E:[XUPFH]|RL:[XOTWU]|RC:[XURC]|[CIA]R:[XLMH]|MAV:[XNALP]|MAC:[XLH]|MPR:[XUNLH]|MUI:[XNR]|MS:[XUC]|M[CIA]:[XNLH])/)*(AV:[NALP]|AC:[LH]|PR:[UNLH]|UI:[NR]|S:[UC]|[CIA]:[NLH]|E:[XUPFH]|RL:[XOTWU]|RC:[XURC]|[CIA]R:[XLMH]|MAV:[XNALP]|MAC:[XLH]|MPR:[XUNLH]|MUI:[XNR]|MS:[XUC]|M[CIA]:[XNLH])$",
            "template": "cvssjs.vector(context)",
            "watch": {
              "attackVector": "cvss.attackVector",
              "attackComplexity": "cvss.attackComplexity",
              "privilegesRequired": "cvss.privilegesRequired",
              "userInteraction": "cvss.userInteraction",
              "scope": "cvss.scope",
              "confidentialityImpact": "cvss.confidentialityImpact",
              "integrityImpact": "cvss.integrityImpact",
              "availabilityImpact": "cvss.availabilityImpact"
            },
            "links": [
              {
                "href": "'https://cvss.js.org/#' + context.self",
                "title": "'CVSS Calculator'",
                "rel": "'Open in CVSS Calculator'"
              }
            ]
          }
    },    
    "required": ["version", "vectorString", "baseScore", "baseSeverity"]
}